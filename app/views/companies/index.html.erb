
<p id="notice"><%= notice %></p>

<h1 class=" text-center">Lista de compañías</h1>
<br/><br/>

<div class="container ">


<table class="table table-striped">
 <thead>
   <tr>
     <th>Empresa</th>
     <th>Cantidad de empleados</th>
     <th>Opciones</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @companies.each do |company| %>
     <tr>
       <td><%= link_to company.name, company %></td>
       <td><%= company.employees.count %></td>
       <td><%= link_to 'Editar', edit_company_path(company), :class => 'btn btn-success' %></td>
       <td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>

     </tr>
   <% end %>
 </tbody>
</table>
</div>
<br/><br/>

<div class="container">
  <%= link_to 'Nueva compañía', new_company_path, :class => 'btn btn-info' %>  
</div>
